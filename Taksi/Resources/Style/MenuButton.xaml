<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!--RadioButton-->
    <!--Используется:
                     * Основное окно с страницами-->

    <Style x:Key="MenuButton" 
               TargetType="RadioButton">
        <Setter
                Property="Background"
                Value="Transparent"/>
        <Setter
                Property="Height"
                Value="40" />
        <Setter 
                Property="FontFamily"
                Value="Bahnschrift"/>
        <Setter
                Property="HorizontalAlignment"
                Value="Left" />
        <Setter
                Property="Width"
                Value="auto" />
        <Setter
                Property="Foreground"
                Value="Black" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Grid>
                        <Border Name="MenuBorder"
                                SnapsToDevicePixels="True"
                                BorderBrush="Transparent"
                                Background="{TemplateBinding Background}"
                                BorderThickness="5,0,0,0" 
                                CornerRadius="0 12 12 0">

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="RadioButton.IsChecked"
                                 Value="True">

                            <Setter Property="Background"
                                    Value="Transparent"/>
                            <Setter
                                    TargetName="MenuBorder"
                                    Property="BorderBrush"
                                    Value="#ffbf69" />
                        </Trigger>
                        <Trigger
                                Property="RadioButton.IsMouseOver"
                                Value="True">
                            <Setter Property="Background"
                                    Value="Transparent"/>

                            <Setter TargetName="MenuBorder"
                                    Property="BorderBrush"
                                    Value="#ffbf69" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="MenuButtonCustom" 
               TargetType="RadioButton">

        <Setter 
                Property="FontFamily"
                Value="Bahnschrift"/>
        <Setter
                Property="Width"
                Value="auto" />
        <Setter
                Property="Foreground"
                Value="Black" />

        <Setter Property="Background"
                Value="#FFCC40"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Grid>
                        <Border Name="MenuBorder"
                                SnapsToDevicePixels="True"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#FFCC40"
                                BorderThickness="2"
                                CornerRadius="5">

                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="RadioButton.IsChecked"
                                 Value="True">

                            <Setter Property="Background"
                                    Value="#ffd166"/>

                            <Setter TargetName="MenuBorder"
                                    Property="BorderBrush"
                                    Value="#f8961e" />
                        </Trigger>
                        <Trigger Property="RadioButton.IsMouseOver"
                                 Value="True">

                            <Setter Property="Background"
                                    Value="#ffd166"/>

                            <Setter Property="Background"
                                    Value="#fcbf49" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>