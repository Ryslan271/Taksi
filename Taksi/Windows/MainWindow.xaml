<Window x:Class="Taksi.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taksi.Windows"
        mc:Ignorable="d"
        Title="TFE"
        Height="550"
        Width="900"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Icon="/Resources/Image/logoMin.png" KeyDown="Window_KeyDown">

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="160*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" x:Name="Colum"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black"
                BorderThickness="0 0 1 1"
                Grid.Column="0">

            <TextBlock x:Name="MainName"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontSize="15"
                       Margin="10 0 0 0"
                       Text="Home"
                       FontFamily="Bahnschrift"/>
        </Border>

        <Border Grid.Column="0"
                BorderThickness="0 0 1 0"
                BorderBrush="Black"
                Padding="0 10 3 0" Margin="0,33,0,0" Grid.RowSpan="3">

            <StackPanel>
                <RadioButton Style="{StaticResource MenuButton}"
                         x:Name="ParsonCabinet"
                         Click="ParsonCabinet_Click">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="5 0 0 0"
                           Source="/Resources/Image/homeIcon.png"/>
                            <TextBlock Text="Личный кабинет"
                                       Visibility="{Binding FlagClickTab}"
                                       FontSize="15"
                                       VerticalAlignment="Center"
                                       Margin="5 0 0 0"/>
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Style="{StaticResource MenuButton}"
                             Click="Orders_Click"
                             x:Name="Orders">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Image/icon_orders.png"
                                   Margin="5 0 0 0"/>
                            <TextBlock Text="Список заказов"
                                       Visibility="{Binding FlagClickTab}"
                                       FontSize="15"
                                       VerticalAlignment="Center"
                                       Margin="5 0 0 0"/>
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton x:Name="MakeOrderListButton"
                             Style="{StaticResource MenuButton}"
                             Click="MakeOrder_Click">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Image/makeOrder_icon.png"
                                   Margin="5 0 0 0"/>
                            <TextBlock Text="Создать заказ"
                                       Visibility="{Binding FlagClickTab}"
                                       FontSize="15"
                                       VerticalAlignment="Center"
                                       Margin="5 0 0 0"/>
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton x:Name="MakeOrderButton"
                         Style="{StaticResource MenuButton}"
                         Visibility="{Binding user.VisibilitiUserToMakeOrAddOrdernd4}">
                    <RadioButton.Content>
                        <Image
                        Source="Resources/Image/icon_orders.png"
                        Margin="5 0 0 0"/>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Style="{StaticResource MenuButton}"
                         Visibility="{Binding user.VisibilitiButton}">
                    <RadioButton.Content>
                        <Image
                        Source="Resources/Image/icon_goinyourhouse.png"
                        Margin="5 0 0 0"/>
                    </RadioButton.Content>
                </RadioButton>

                <RadioButton Style="{StaticResource MenuButton}"
                             Click="ButtonClickExit">
                    <RadioButton.Content>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Image/exit_icon.png"
                                   Margin="5 0 0 0"/>
                            <TextBlock Text="Выйти"
                                       Visibility="{Binding FlagClickTab}"
                                       FontSize="15"
                                       VerticalAlignment="Center"
                                       Margin="5 0 0 0"/>
                        </StackPanel>
                    </RadioButton.Content>
                </RadioButton>
            </StackPanel>
        </Border>

        <Border CornerRadius="5 5 0 0"
                BorderThickness="2"
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                x:Name="StackPanelMessageInfo"
                Padding="5 0 5 0">
            
            <StackPanel MaxWidth="300">

                <TextBlock VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       x:Name="InformationMessage"/>
            </StackPanel>
        </Border>

        <Frame x:Name="MainFrame"
               ScrollViewer.VerticalScrollBarVisibility="Visible"
               NavigationUIVisibility="Hidden"
               Grid.Column="1"
               Grid.RowSpan="2"/>
    </Grid>
</Window>
